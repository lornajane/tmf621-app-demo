{
  "info": {
    "name": "TMF621 Trouble Ticket API - Workshop",
    "description": "Collection for hands-on workshop with TMF621 API. Replace {{baseUrl}} with your Railway deployment URL.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://web-production-1651.up.railway.app/",
      "type": "string"
    },
    {
      "key": "ticketId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Info",
      "item": [
        {
          "name": "API Root Info",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/",
              "host": ["{{baseUrl}}"],
              "path": [""]
            },
            "description": "Get API information and available endpoints"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check API health status"
          }
        }
      ]
    },
    {
      "name": "Trouble Tickets - Read",
      "item": [
        {
          "name": "List All Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Retrieve all trouble tickets"
          }
        },
        {
          "name": "Filter by Critical Severity",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket?severity=critical",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"],
              "query": [
                {
                  "key": "severity",
                  "value": "critical"
                }
              ]
            },
            "description": "Get only critical severity tickets"
          }
        },
        {
          "name": "Filter by Status - In Progress",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket?status=inProgress",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"],
              "query": [
                {
                  "key": "status",
                  "value": "inProgress"
                }
              ]
            },
            "description": "Get tickets currently in progress"
          }
        },
        {
          "name": "Get Ticket by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket/{{ticketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket", "{{ticketId}}"]
            },
            "description": "Get a specific ticket by ID. Set the ticketId variable or copy an ID from the List endpoint."
          }
        }
      ]
    },
    {
      "name": "Trouble Tickets - Create",
      "item": [
        {
          "name": "Create Critical Incident",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Microwave popcorn forgotten. Building evacuated. Fire dept appreciates the exercise.\",\n  \"severity\": \"critical\",\n  \"priority\": 1,\n  \"type\": \"incident\",\n  \"channel\": \"automated\",\n  \"externalId\": \"POPCORN-GATE-2026\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Create a critical incident ticket"
          }
        },
        {
          "name": "Create Customer Request",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Request installation of 'beep louder' button on microwave. Current beep inadequate.\",\n  \"severity\": \"minor\",\n  \"priority\": 4,\n  \"type\": \"request\",\n  \"channel\": \"email\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Create a customer request ticket"
          }
        },
        {
          "name": "Create Network Trouble",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Washing machine soap overflow. Kitchen floor now bubble kingdom. Cat surfing.\",\n  \"severity\": \"major\",\n  \"priority\": 2,\n  \"type\": \"trouble\",\n  \"channel\": \"phone\",\n  \"expectedResolutionDate\": \"2026-01-08T18:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Create a network trouble ticket with expected resolution"
          }
        }
      ]
    },
    {
      "name": "Trouble Tickets - Update",
      "item": [
        {
          "name": "Update Status to In Progress",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"inProgress\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket/{{ticketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket", "{{ticketId}}"]
            },
            "description": "Update ticket status to inProgress"
          }
        },
        {
          "name": "Resolve Ticket",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"resolved\",\n  \"resolutionDate\": \"2026-01-07T16:30:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket/{{ticketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket", "{{ticketId}}"]
            },
            "description": "Mark ticket as resolved with resolution timestamp"
          }
        },
        {
          "name": "Update Priority and Severity",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"severity\": \"critical\",\n  \"priority\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket/{{ticketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket", "{{ticketId}}"]
            },
            "description": "Escalate ticket by updating severity and priority"
          }
        }
      ]
    },
    {
      "name": "Trouble Tickets - Delete",
      "item": [
        {
          "name": "Delete Ticket",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket/{{ticketId}}",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket", "{{ticketId}}"]
            },
            "description": "Delete a trouble ticket by ID"
          }
        }
      ]
    },
    {
      "name": "Workshop Exercises",
      "item": [
        {
          "name": "Exercise 1 - Create Your First Ticket",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"YOUR DESCRIPTION HERE - make it unique!\",\n  \"severity\": \"major\",\n  \"priority\": 2,\n  \"type\": \"trouble\",\n  \"channel\": \"web\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Create your first ticket! Edit the description to make it unique."
          }
        },
        {
          "name": "Exercise 2 - Find Critical Tickets",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket?severity=critical",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"],
              "query": [
                {
                  "key": "severity",
                  "value": "critical"
                }
              ]
            },
            "description": "Find all critical tickets - how many are there?"
          }
        },
        {
          "name": "Exercise 3 - Complete Workflow",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Workshop Exercise: Blender lid not secured. Smoothie achieved flight. Ceiling now tropical.\",\n  \"severity\": \"major\",\n  \"priority\": 2,\n  \"type\": \"incident\",\n  \"channel\": \"phone\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/tmf-api/troubleTicket/v5/troubleTicket",
              "host": ["{{baseUrl}}"],
              "path": ["tmf-api", "troubleTicket", "v5", "troubleTicket"]
            },
            "description": "Step 1: Create ticket. Then copy the ID and update it to 'inProgress', then 'resolved'."
          }
        }
      ]
    }
  ]
}
